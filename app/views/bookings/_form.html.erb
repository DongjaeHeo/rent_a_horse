
<%= simple_form_for([horse, booking]) do |f| %>
  <% if booking.errors.any? %>
    <% booking.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  <% end %>
  <%= f.date_field :start_date, min: Date.tomorrow %>
  <%= f.date_field :end_date, min: Date.tomorrow %>
  <%= f.submit %>

<% end %>
