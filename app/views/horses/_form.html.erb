<%= simple_form_for(@horse) do |f| %>
  <%= f.input :name  %>
  <%= f.input :breed, :collection => ['arab', 'warmblood', 'pony', 'throughbred', 'icelandic', 'coldblood', 'mustang']%>
  <%= f.input :colour, :collection => ['bay', 'chestnut', 'grey', 'black', 'buckskin', 'palomino', 'pinto', 'leopard', 'appaloosa'] %>
  <%= f.input :discipline, :collection => ['show jumper', 'school master', 'dressage horse', 'general usage', 'eventer', 'rogue', 'driving']%>
  <%= f.input :height %>
  <%= f.input :description %>
  <%= f.input :location,
  input_html: {data: {location_autocomplete_target: "location"}, class: "d-none"},
  wrapper_html: {data: {controller: "location-autocomplete", location_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
  %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit 'save' %>
<% end %>
